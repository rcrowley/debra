#!/bin/sh

usage() {
	echo "Usage: $(basename $0) [-a]" >&2
	if [ -n "$1" ]; then
		echo "  -a  create Makefile.in for autoconf builds" >&2
		echo "  -h  show this help message" >&2
	fi
	exit 1
}

MAKEFILE=Makefile
while getopts ah name; do
	case "$name" in
		a) MAKEFILE=Makefile.in;;
		h) usage MOAR;;
		*) usage;;
	esac
done

cat >>$MAKEFILE <<EOF
all:
	@true

deb:
ifeq (root, \$(shell whoami))
	debra create debian control
	# TODO Copy files into place.
	chown -R root:root debian
	debra build debian # TODO Package filename.
	debra destroy debian
else
	@echo "You must be root to build a Debian package."
endif

.PHONY: all deb
EOF

cat >control <<EOF
Package: TODO
Version: TODO
Section: TODO
Priority: optional
Essential: no
Architecture: TODO
Depends: TODO
Pre-Depends: TODO
Recommends: TODO
Suggests: TODO
Conflicts: TODO
Replaces: TODO
Provides: TODO
Installed-Size: TODO
Maintainer: TODO
Description: TODO
EOF
