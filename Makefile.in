prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
datarootdir=@datarootdir@
mandir=@mandir@

all:
	@true

install:
	install -d $(DESTDIR)$(bindir) $(DESTDIR)$(mandir)
	install -c bin/debra $(DESTDIR)$(bindir)/
	install -c bin/sourceinstall $(DESTDIR)$(bindir)/
	install -c man/debra.8 $(DESTDIR)$(mandir)/
	install -c man/sourceinstall.8 $(DESTDIR)$(mandir)/
 
uninstall:
	rm $(DESTDIR)$(bindir)/debra $(DESTDIR)$(bindir)/sourceinstall

man:
	@make -C man all

deb:
	git archive --prefix=debra-0.1.2/ v0.1.2 | gzip >/var/www/static/debra-0.1.2.tar.gz
	bin/debra create debian control
	bin/debra sourceinstall debian http://static.rmilitia.com/debra-0.1.2.tar.gz -p /usr/local
	bin/debra build debian debra_0.1.2-1_all.deb
	bin/debra destroy debian

.PHONY: all install uninstall man deb
